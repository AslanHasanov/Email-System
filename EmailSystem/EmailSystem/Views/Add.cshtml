@using EmailSystem.ViewModels;
@model AddViewModel
<div class="container">


        <div class="container">
            <div class="row justify-content-end">
                <div class="">
                    <a asp-controller="email" asp-action="list" class="btn btn-warning">Email List</a>
                </div>
            </div>
            <form method="POST" asp-controller="Email" asp-action="Add">
                <div>
                Bulk : @Html.RadioButtonFor(b=> b.Status ,"true")
                Invidual : @Html.RadioButtonFor(b=> b.Status ,"false")
                </div>
                <div class="form-group">
                    <label asp-for="TargetEmail.Email"></label>
                    <input asp-for="TargetEmail.Email" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Tittle"></label>
                    <input asp-for="Tittle" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Message"></label>
                    <input asp-for="Message" class="form-control">
                </div>



                <button type="submit" class="btn btn-primary mt-5 ">SEND</button>
            </form>
        </div>

    </div>